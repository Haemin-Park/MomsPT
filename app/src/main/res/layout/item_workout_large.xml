<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="LargeWorkoutItem"
            type="com.fitsionary.momspt.data.model.WorkoutModel" />

        <variable
            name="LargeWorkoutItemListener"
            type="com.fitsionary.momspt.util.listener.OnItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:onClick="@{()->LargeWorkoutItemListener.onClick(LargeWorkoutItem)}"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/gray"
            app:strokeWidth="1dp">

            <ImageView
                image_url="@{LargeWorkoutItem.thumbnail}"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/sample" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/bold_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@{LargeWorkoutItem.name}"
                tools:text="선명하고 탄탄한 복근 만들기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/medium_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{String.valueOf(LargeWorkoutItem.playtime) + `분`}"
                    android:textColor="@color/dark_gray"
                    tools:text="13분" />

                <TextView
                    style="@style/medium_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=" · "
                    android:textColor="@color/dark_gray" />

                <TextView
                    style="@style/medium_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(LargeWorkoutItem.calorie) + `kcal`}"
                    android:textColor="@color/dark_gray"
                    tools:text="47kcal" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:checked="@{LargeWorkoutItem.finish}"
            android:clickable="false"
            tools:checked="true" />
    </LinearLayout>
</layout>