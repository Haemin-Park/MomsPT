<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.fitsionary.momspt.presentation.home.viewmodel.HomeViewModel" />

        <variable
            name="CommentItem"
            type="com.fitsionary.momspt.data.api.response.TodayCommentResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/aaaa"
            style="@style/bold_60sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="@color/pink"
            android:text="@{`D+` + String.valueOf(CommentItem.d_day)}" />

        <TextView
            style="@style/medium_14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{CommentItem.comment}"
            android:textColor="@color/dark_gray" />

        <TextView
            style="@style/bold_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="@string/daily_recommended_workout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommend_workout"
            replaceAll="@{vm.workoutList}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</layout>