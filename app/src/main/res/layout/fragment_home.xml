<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.fitsionary.momspt.presentation.home.viewmodel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_22dp"
                android:layout_marginTop="@dimen/spacing_26dp"
                android:layout_marginEnd="@dimen/spacing_22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/bold_22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.comment.comment}"
                    android:textColor="@color/black"
                    tools:text="근력 회복 운동을\n집중적으로\n해야하는 시기에요" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    style="@style/medium_18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_background"
                    android:paddingLeft="@dimen/spacing_16dp"
                    android:paddingTop="@dimen/spacing_8dp"
                    android:paddingRight="@dimen/spacing_16dp"
                    android:paddingBottom="@dimen/spacing_8dp"
                    android:text="@{@string/d_day_format(vm.comment.dayAfterBabyDue)}"
                    android:textColor="@color/pink"
                    tools:text="D+18" />
            </LinearLayout>

            <TextView
                style="@style/bold_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_22dp"
                android:layout_marginTop="@dimen/spacing_50dp"
                android:layout_marginEnd="@dimen/spacing_22dp"
                android:layout_marginBottom="@dimen/spacing_18dp"
                android:fontFamily="@font/noto_sans_bold"
                android:text="@string/daily_recommended_workout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend_workout"
                bindItems="@{vm.workoutList}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="@dimen/spacing_22dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:ignore="RtlSymmetry" />

            <TextView
                style="@style/bold_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_22dp"
                android:layout_marginTop="@dimen/spacing_50dp"
                android:layout_marginEnd="@dimen/spacing_22dp"
                android:layout_marginBottom="@dimen/spacing_18dp"
                android:fontFamily="@font/noto_sans_bold"
                android:text="@string/weekly_statistics" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_day_achieved"
                bindItems="@{vm.dayAchievedList}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/spacing_22dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="7"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </ScrollView>
</layout>