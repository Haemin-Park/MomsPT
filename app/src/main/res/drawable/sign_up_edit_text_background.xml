<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/sign_up_edit_text_background_stroke" android:color="@color/medium_gray" />
            <corners android:radius="@dimen/sign_up_edit_text_background_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/sign_up_edit_text_background_stroke" android:color="@color/pink" />
            <corners android:radius="@dimen/sign_up_edit_text_background_radius" />
        </shape>
    </item>
</selector>
